extend ../layouts/common_unauth.pug
block content
    div.text_color.semiBoldRaleWay.d-flex.justify-content-center
        div.justify-content-center.w-50.p-5.m-4.position-relative
            h1.extraBoldRaleWay Sign Up
            h6.pt-3.pd-3 Create your new account!
            form(action='/users/create', method="POST")
                .mb-3
                label.form-label(id = "firstname",for='exampleFormControlInput1') First Name
                input#exampleFormControlInput1.form-control(name = "firstname",type='text', placeholder='First Name')

                .mb-3
                label.form-label(id = "lastname",for='exampleFormControlInput2') Last Name
                input#exampleFormControlInput2.form-control(name = "lastname",type='text', placeholder='Last Name')

                .mb-3
                label.form-label(id="username",for='exampleFormControlInput3') Username
                input#exampleFormControlInput3.form-control(name="username",type='text', placeholder='Username')

                .mb-3
                label.form-label(id = "email",for='exampleFormControlInput4') Email
                input#exampleFormControlInput4.form-control(name = "email",type='email', placeholder='Email')

                .mb-3
                label.form-label(id = "password",for='exampleFormControlInput5') Password
                input#exampleFormControlInput5.form-control(name = "password",type='text', placeholder='Password')
                
                .mb-3
                label.form-label(id = "firstname",for='exampleFormControlInput5') First Name
                input#exampleFormControlInput5.form-control(name = "firstname",type='text', placeholder='First Name')

                button(class="btn_color btn btn-primary position-absolute bottom-0 end-0") Sign Up
        div.w-50
            div.i_signUp